generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario      Int      @id @default(autoincrement())
  nome            String   @db.VarChar(255)
  email           String   @unique @db.VarChar(255)
  senha           String   @db.VarChar(255)
  id_nivel_acesso Int
  data_criacao    DateTime @default(now()) @db.Timestamp(6)
  ativo           Boolean  @default(true)

  nivel_acesso NivelAcesso @relation(fields: [id_nivel_acesso], references: [id_nivel_acesso])
  estacoes     Estacao[]
  alertas      Alerta[]

  @@map("usuarios")
}

model NivelAcesso {
  id_nivel_acesso Int       @id @default(autoincrement())
  descricao       String    @db.VarChar(50)
  usuarios        Usuario[]

  @@map("nivel_acesso")
}

model Estacao {
  id_estacao   Int      @id
  nome         String   @db.VarChar(255)
  endereco     String?  @db.VarChar(255)
  latitude     Decimal  @db.Decimal(10, 8)
  longitude    Decimal  @db.Decimal(10, 8)
  descricao    String?  @db.Text
  data_criacao DateTime @default(now()) @db.Timestamp(6)
  id_usuario   Int

  usuario  Usuario  @relation(fields: [id_usuario], references: [id_usuario])
  sensores Sensor[]
  alertas  Alerta[]

  @@map("estacao")
}

model Alerta {
  id_alerta  Int      @id @default(autoincrement())
  id_estacao Int
  id_usuario Int
  titulo     String   @db.VarChar(255)
  texto      String   @db.Text
  data_hora  DateTime @default(now()) @db.Timestamp(6)
  status     String   @db.VarChar(20)

  estacao Estacao @relation(fields: [id_estacao], references: [id_estacao])
  usuario Usuario @relation(fields: [id_usuario], references: [id_usuario])

  @@map("alerta")
}

model Medida {
  id_medida Int      @id @default(autoincrement())
  id_sensor Int
  valor     Decimal  @db.Decimal(10, 2)
  data_hora DateTime @default(now()) @db.Timestamp(6)

  sensor Sensor @relation(fields: [id_sensor], references: [id_sensor])

  @@map("medida")
}

model Sensor {
  id_sensor         Int     @id
  id_estacao        Int
  id_tipo_parametro Int
  descricao         String? @db.Text

  estacao        Estacao       @relation(fields: [id_estacao], references: [id_estacao])
  tipo_parametro TipoParametro @relation(fields: [id_tipo_parametro], references: [id_tipo_parametro])
  medidas        Medida[]

  @@map("sensor")
}

model TipoParametro {
  id_tipo_parametro Int      @id @default(autoincrement())
  nome              String   @db.VarChar(100)
  unidade           String   @db.VarChar(20)
  fator             Int?
  polinomio         Decimal? @db.Decimal(10, 8)
  offset            Int?

  sensores Sensor[]

  @@map("tipo_parametro")
}
